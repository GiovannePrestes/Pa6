@model ControlePatrimonios.Models.TbBloco

@{
    ViewData["Title"] = "Edit";
    var message = ViewBag.Message as ControlePatrimonios.Models.Message;
}
@if (message != null)
{
    @if (message.Icon.Equals("success"))
    {
        <script>
        swal('@message.Title', '@message.Text', '@message.Icon').then(() => { window.location.href = "@Url.Action("Index", "Bloco")"; });
        </script>
    }
    else
    {
        <script>
        swal('@message.Title', '@message.Text', '@message.Icon');
        </script>
    }
}
<h2>Editar Bloco</h2>

<hr />
<div class="center">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdBloco" />
                <div class="form-group">
                    <label asp-for="NomeBloco" class="control-label"></label>
                    <input asp-for="NomeBloco" class="form-control" />
                    <span asp-validation-for="NomeBloco" class="text-danger"></span>
                </div>
                <div class="form-group" align="right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-offset-4 col-md-4">
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
