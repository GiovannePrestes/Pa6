@model ControlePatrimonios.Models.TbEstado

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar Estado</h2>
<hr />
<div class="center">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdEstado" />
                <div class="form-group">
                    <label asp-for="DescricaoEstado" class="control-label"></label>
                    <input asp-for="DescricaoEstado" class="form-control" />
                    <span asp-validation-for="DescricaoEstado" class="text-danger"></span>
                </div>
                <div class="form-group" align="right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-offset-4 col-md-4">
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
