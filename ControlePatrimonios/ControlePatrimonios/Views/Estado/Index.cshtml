@model IEnumerable<ControlePatrimonios.Models.TbEstado>

@{
    ViewData["Title"] = "Estados";
}

<h2>Estados</h2>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div align="right">
            <button class="btn btn-primary" onclick="onClickCriar()">Criar novo estado</button>
        </div>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoEstado)
                        <form asp-controller="Estado" asp-action="Index" method="get">
                            <input class="label-primary" type="text" name="search">
                            <input class="btn btn-primary" type="submit" value="Filtrar" />
                        </form>
                    </th>
                    <th width="275"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoEstado)
                        </td>
                        <td align="right">
                            <button class="btn" onclick="Edit(@item.IdEstado)">Editar</button> |
                            <button class="btn" onclick="Details(@item.IdEstado)">Detalhes</button> |
                            <button class="btn" onclick="Delete(@item.IdEstado)">Excluir</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    function onClickCriar() {
        window.location.href = "@Url.Action("Create", "Estado")";
    }
    function Edit(EstadoId) {
        window.location.href = "@Url.Action("Edit", "Estado")/" + EstadoId;
    }
    function Details(EstadoId) {
        $.get("@Url.Action("Details", "Estado")",
            {
                id: EstadoId
            })
            .done(function (result) {
                if (result.success)
                    swal({
                        title: "Detalhes",
                        text: "Nome do Estado: " + result.message,
                        //icon: "success"
                    });
            });
    }
    function Delete(EstadoId) {
        $.get("@Url.Action("GetDescricaoEstadoById", "Estado")",
            {
                id: EstadoId
            })
            .done(function (resultNomeEstado) {
                swal({
                    title: "Tem certeza?",
                    text: "Você irá excluir o Estado: '" + resultNomeEstado.message + "'",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                })
                    .then((excluir) => {
                        if (excluir) {
                            $.post("@Url.Action("Delete", "Estado")",
                                {
                                    id: EstadoId
                                })
                                .done(function (result) {
                                    if (result.success) {
                                        swal({
                                            title: "Estado '" + result.message + "' deletado com sucesso",
                                            icon: "success"
                                        }).then(() => {
                                            window.location.reload();
                                        });
                                    } else {
                                        swal({
                                            title: "Atenção!",
                                            text: "Não foi possível excluir o Estado '" + result.message + "' pois existem objetos atrelados a ele",
                                            icon: "warning"
                                        });
                                    }
                                })
                                .fail(function () {
                                    swal("", "Algo deu errado", "error")
                                });
                        } else {
                            swal({ title: "Estado: '" + resultNomeEstado.message + "' não deletado" });
                        }
                    });
            });

    }
</script>
