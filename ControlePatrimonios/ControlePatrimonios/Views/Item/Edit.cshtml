@model ControlePatrimonios.Models.TbItem

@{
    ViewData["Title"] = "Editar";
    var message = ViewBag.Message as ControlePatrimonios.Models.Message;
}

@if (message != null)
{
    @if (message.Icon.Equals("success"))
    {
        <script>
        swal('@message.Title', '@message.Text', '@message.Icon').then(() => { window.location.href = "@Url.Action("Index", "Item")"; });
        </script>
    }
    else
    {
        <script>
        swal('@message.Title', '@message.Text', '@message.Icon');
        </script>
    }
}
<h2>Editar Item</h2>
<hr />
<div class="center">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdItem" />
                <div class="form-group">
                    <label asp-for="IdSetorNavigation" class="control-label"></label>
                    <select asp-for="IdSetor" class="form-control" asp-items="ViewBag.IdSetor"></select>
                    <span asp-validation-for="IdSetor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoNavigation" class="control-label"></label>
                    <select asp-for="IdTipo" class="form-control" asp-items="ViewBag.IdTipo"></select>
                    <span asp-validation-for="IdTipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdEstadoNavigation" class="control-label"></label>
                    <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.IdEstado"></select>
                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patrimonio" class="control-label"></label>
                    <input asp-for="Patrimonio" class="form-control" type="number" />
                    <span asp-validation-for="Patrimonio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceTag" class="control-label"></label>
                    <input asp-for="ServiceTag" class="form-control" />
                    <span asp-validation-for="ServiceTag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group" align="right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-offset-4 col-md-4">
        <a asp-action="Index">Voltar para a lista</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
