@model IEnumerable<ControlePatrimonios.Models.TbItem>
@{
    ViewData["Title"] = "Itens";
}

<h2>Itens</h2>
<div>
    <br/>
    <br/>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdItem)</th>
                <th>@Html.DisplayNameFor(model => model.IdSetorNavigation.NomeSetor)</th>
                <th>@Html.DisplayNameFor(model => model.IdTipoNavigation.DescricaoTipo)</th>
                <th>@Html.DisplayNameFor(model => model.IdEstadoNavigation.DescricaoEstado)</th>
                <th>@Html.DisplayNameFor(model => model.Patrimonio)</th>
                <th>@Html.DisplayNameFor(model => model.ServiceTag)</th>
                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.DataCriacao)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdItem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdSetorNavigation.NomeSetor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipoNavigation.DescricaoTipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEstadoNavigation.DescricaoEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patrimonio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceTag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCriacao)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdItem">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.IdItem">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.IdItem">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>