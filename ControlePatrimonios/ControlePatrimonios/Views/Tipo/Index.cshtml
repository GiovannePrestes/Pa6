@model IEnumerable<ControlePatrimonios.Models.TbTipo>

@{
    ViewData["Title"] = "Tipos";
}

<h2>Tipos</h2>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div align="right">
            <button class="btn btn-primary" onclick="onClickCriar()">Criar novo tipo</button>
        </div>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoTipo)
                        <form asp-controller="Tipo" asp-action="Index" method="get">
                            <input class="label-primary" type="text" name="search">
                            <input class="btn btn-primary" type="submit" value="Filtrar" />
                        </form>
                    </th>
                    <th width="275"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoTipo)
                        </td>
                        <td align="right">
                            <button class="btn" onclick="Edit(@item.IdTipo)">Editar</button> |
                            <button class="btn" onclick="Details(@item.IdTipo)">Detalhes</button> |
                            <button class="btn" onclick="Delete(@item.IdTipo)">Excluir</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script>
    function onClickCriar() {
        window.location.href = "@Url.Action("Create", "Tipo")";
    }
    function Edit(TipoId) {
        window.location.href = "@Url.Action("Edit", "Tipo")/" + TipoId;
    }
    function Details(TipoId) {
        $.get("@Url.Action("Details", "Tipo")",
            {
                id: TipoId
            })
            .done(function (result) {
                if (result.success)
                    swal({
                        title: "Detalhes",
                        text: "Descrição do Tipo: " + result.message,
                        icon: "success"
                    });
            });
    }
    function Delete(TipoId) {
        $.get("@Url.Action("GetDescricaoTipoById", "Tipo")",
            {
                id: TipoId
            })
            .done(function (resultNomeTipo) {
                swal({
                    title: "Tem certeza?",
                    text: "Você irá excluir o Tipo: '" + resultNomeTipo.message + "'",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                })
                    .then((excluir) => {
                        if (excluir) {
                            $.post("@Url.Action("Delete", "Tipo")",
                                {
                                    id: TipoId
                                })
                                .done(function (result) {
                                    if (result.success) {
                                        swal({
                                            title: "Tipo '" + result.message + "' deletado com sucesso",
                                            icon: "success"
                                        }).then(() => {
                                            window.location.reload();
                                        });
                                    } else {
                                        swal({
                                            title: "Atenção!",
                                            text: "Não foi possível excluir o Tipo '" + result.message + "' pois existem objetos atrelados a ele",
                                            icon: "warning"
                                        });
                                    }
                                })
                                .fail(function () {
                                    swal("", "Algo deu errado", "error")
                                });
                        } else {
                            swal({ title: "Tipo: '" + resultNomeTipo.message + "' não deletado" });
                        }
                    });
            });

    }
</script>
