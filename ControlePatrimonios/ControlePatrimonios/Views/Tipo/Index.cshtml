@model IEnumerable<ControlePatrimonios.Models.TbTipo>

@{
    ViewData["Title"] = "Tipos";
}

<h2>Tipos</h2>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div align="right">
            <button class="btn btn-primary" onclick="onClickCriar()">Criar novo tipo</button>
        </div>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoTipo)
                    </th>
                    <th width="275"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoTipo)
                        </td>
                        <td align="right">
                            <button class="btn" onclick="Edit(@item.IdTipo)">Editar</button> |
                            <button class="btn" onclick="Details(@item.IdTipo)">Detalhes</button> |
                            <button class="btn" onclick="Delete(@item.IdTipo)">Excluir</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script>
    function onClickCriar() {
        window.location.href = "./Tipo/Create";
    }
    function Edit(TipoId) {
        window.location.href = "./Tipo/Edit/" + TipoId;
    }
    function Details(TipoId) {
        $.get("./Tipo/Details",
            {
                id: TipoId
            })
            .done(function (result) {
                if (result.success)
                    swal({
                        title: "Detalhes",
                        text: "Descrição do Tipo: " + result.message,
                        icon: "success"
                    });
            });
    }
    function Delete(TipoId) {
        $.get("./Tipo/GetDescricaoTipoById",
            {
                id: TipoId
            })
            .done(function (resultNomeTipo) {
                swal({
                    title: "Tem certeza?",
                    text: "Você irá excluir o Tipo: " + resultNomeTipo.message,
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                .then((excluir) => {
                    if (excluir) {
                        $.post("./Tipo/DeleteConfirmed",
                            {
                                id: TipoId
                            })
                            .done(function (result) {
                                if (result.success)
                                    swal({
                                        title: "Tipo " + result.message + " deletado com sucesso",
                                        icon: "success"
                                    }).then(() => {
                                        window.location.reload();
                                    });
                            })
                            .fail(function () {
                                swal("", "Algo deu errado", "error")
                            });
                    } else {
                        swal({ title: resultNomeTipo.message + " não deletado"});
                    }
                });
            });

    }
</script>
